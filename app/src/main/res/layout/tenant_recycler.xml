<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_recyclerview"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInitialOuter"
            android:layout_height="27dp"
            android:layout_width="27dp"
            app:cardBackgroundColor="#8D000000"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            app:cardCornerRadius="17dp"
            app:cardElevation="0dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardInitialInner"
                android:layout_height="24dp"
                android:layout_width="24dp"
                app:cardBackgroundColor="#C3D1FB"
                android:layout_gravity="center"
                app:cardCornerRadius="17dp"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/textInitial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="T"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="#1E0404"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#00D58715"
            android:backgroundTintMode="src_atop"
            android:backgroundTint="#B7131313">

            <TextView
                android:id="@+id/tenantName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:gravity="start|center"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:text=""
                android:hint="TENANT NAME"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#C6000000"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>