<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingTop="@dimen/activity_margin">
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="8sp"
            android:text="Update House Details"
            android:textColor="@color/window"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/textInputEditTextHouseName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height"
            android:hint="Enter House Name"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorText" />
        <EditText
            android:id="@+id/textInputEditTextHouseType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height"
            android:hint="Define House Type"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorText" />
        <EditText
            android:id="@+id/textInputEditTextHouseLocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height"
            android:hint="Enter Location"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/colorText" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#A3A3A3"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="  PROPERTY MANAGEMENT SYSTEM "
            android:textColor="#133481"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>